{
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true,
      "feature/**": false,
      "bugfix/**": false,
      "hotfix/**": true
    }
  },
  "github": {
    "silent": true,
    "autoAlias": true
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
